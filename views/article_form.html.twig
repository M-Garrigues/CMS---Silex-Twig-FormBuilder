{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>




<div class="well">
{{ form_start(articleForm, { 'attr': {'class': 'form-horizontal'} }) }}

    <div class="form-group">
        {{ form_label(articleForm.title, null, { 'label_attr':  {
            'class': 'col-sm-4 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(articleForm.title) }}
            {{ form_widget(articleForm.title, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>


    <div class="form-group">
        {{ form_label(articleForm.content, null, { 'label_attr':  {
            'class': 'col-sm-3 control-label'
        }}) }}
        <div class="col-sm-6">
            {{ form_errors(articleForm.content) }}
            {{ form_widget(articleForm.content, { 'attr':  {
                'class': 'form-control',
                'rows': '15'                
            }}) }}
        </div>
    </div>


    <div class="form-group">
        {{ form_label(articleForm.date, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-3">
            {{ form_errors(articleForm.date) }}
            {{ form_widget(articleForm.date, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>



    <div class="form-group">
        {{ form_label(articleForm.kwConv, null, { 'label_attr':  {
            'class': 'col-sm-3 control-label'
        }}) }}
        <div class="col-sm-6">
            {{ form_errors(articleForm.kwConv) }}
            {{ form_widget(articleForm.kwConv, { 'attr':  {
                'class': 'form-control',
                'rows': '2'                
            }}) }}
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <input type="submit" class="btn btn-primary" value="Enregistrer" />
        </div>
    </div>
{{ form_end(articleForm) }}
</div>
{% endblock %}

