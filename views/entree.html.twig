{% extends "layout.html.twig" %}


{% block title %}{{entry.name}}{% endblock %}


{% block content %}

<h2 class="noselect">{{entry.name}}</h2>

<br>
<b>{{entry.content}}</b>
<br>
<br>

<h3 class="noselect">Articles:</h3>

{% for article in articles %}

<article>

    <a href="{{path('article', {id : article.id})}}"><h3>{{ article.title }}</h3></a>

    <p>{{ article.content }}</p>

</article>

{% endfor %}

{% endblock %}